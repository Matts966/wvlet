from
    customer,
    orders,
    lineitem
where
    o_orderkey.in(
        from
            lineitem
        select
            l_orderkey
        group by
            l_orderkey
        where
            l_quantity.sum > 300
    )
    and c_custkey = o_custkey
    and o_orderkey = l_orderkey
group by
    c_name,
    c_custkey,
    o_orderkey,
    o_orderdate,
    o_totalprice
select
    c_name,
    c_custkey,
    o_orderkey,
    o_orderdate,
    o_totalprice,
    l_quantity.sum
order by
    o_totalprice desc,
    o_orderdate
limit 100
